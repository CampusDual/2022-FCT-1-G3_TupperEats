<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="customer"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>customer_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>customer_id</Column>
    </UpdateKeys>
    <Queries>
		<Query id="customer_suscriptionQuery">
			
			<Sentence>
			   <![CDATA[
			     SELECT
			      #COLUMNS#
			     FROM
			   	customer c JOIN suscription_customer sc ON c.customer_id = sc.id_customer 
				JOIN suscription s on sc.id_suscription = s.suscription_id
				#WHERE#
			   ]]>
		</Sentence>
		</Query>
		
		<Query id="customer_menuQuery">
			
			<Sentence>
			   <![CDATA[
			     SELECT
			      #COLUMNS#
			     FROM
			      customer c JOIN menu_customer mc ON c.customer_id = mc.id_customer 
			      JOIN menu m ON mc.id_menu = m.menu_id
				#WHERE#
			   ]]>
		</Sentence>
		</Query>
	</Queries>
	
</JdbcEntitySetup>