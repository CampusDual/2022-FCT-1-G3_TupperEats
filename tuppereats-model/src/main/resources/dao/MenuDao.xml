<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
	xmlns="http://www.ontimize.com/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
	catalog="" schema="${mainschema}" table="menu"
	datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
	<DeleteKeys>
		<Column>menu_id</Column>
	</DeleteKeys>
	<UpdateKeys>
		<Column>menu_id</Column>
	</UpdateKeys>
	<GeneratedKey>menu_id</GeneratedKey>

	<Queries>
		<Query id="default">
			<AmbiguousColumns>
				<AmbiguousColumn name="first_plate" prefix="pp"
					databaseName="name" />
				<AmbiguousColumn name="second_plate" prefix="ps"
					databaseName="name" />
				<AmbiguousColumn name="dessert" prefix="po"
					databaseName="name" />
			</AmbiguousColumns>
			<Sentence>
			   <![CDATA[
			     SELECT
			      #COLUMNS#
			     FROM
			      menu mn
			      join product pp on mn.first_plate=pp.product_id
			
			
			      join product ps on mn.second_plate=ps.product_id
			
			
			      join product po on mn.dessert=po.product_id
			
				#WHERE#
			
			   ]]>
		</Sentence>
		</Query>
	</Queries>

</JdbcEntitySetup>