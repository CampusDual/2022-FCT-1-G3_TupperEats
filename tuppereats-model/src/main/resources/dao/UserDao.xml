<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="tuser"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>user_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>user_</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">
            <ValidColumns>
                <Column>user_</Column>
                <Column>email</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>nif</Column>
                <Column>city</Column>
                <Column>address</Column>
                <Column>phone</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>
                <Column>user_</Column>
                <Column>email</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="userSuscriptionQuery">
			
			<Sentence>
			   <![CDATA[
			     SELECT
			      #COLUMNS#
			     FROM
			   	tuser u JOIN suscription_customer sc ON u.user_ = sc.user_suscription
				JOIN suscription s on sc.id_suscription = s.suscription_id
				#WHERE#
			   ]]>
		</Sentence>
		</Query>
		
		<Query id="userMenuQuery">
			
			<Sentence>
			   <![CDATA[
			     SELECT
			      #COLUMNS#
			     FROM
			      tuser u JOIN menu_customer mc ON u.user_ = mc.user_menu 
			      JOIN menu m ON mc.id_menu = m.menu_id
				#WHERE#
			   ]]>
		</Sentence>
		</Query>
		
		<Query id="customerQuery">
			<AmbiguousColumns>
				<AmbiguousColumn name="user_" prefix="tu" />
				<AmbiguousColumn name="id_rolename" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.tuser tu
						JOIN ${mainschema}.tuser_role tur ON tu.user_ = tur.user_
						JOIN ${mainschema}.trole tr on tur.id_rolename = tr.id_rolename
					WHERE
					tr.id_rolename = 2
					]]>
			</Sentence>
        </Query>
        
        <Query id="noCustomerQuery">
			<AmbiguousColumns>
				<AmbiguousColumn name="user_" prefix="tu" />
				<AmbiguousColumn name="id_rolename" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.tuser tu
						JOIN ${mainschema}.tuser_role tur ON tu.user_ = tur.user_
						JOIN ${mainschema}.trole tr on tur.id_rolename = tr.id_rolename
					WHERE
					tr.id_rolename = 0 OR tr.id_rolename = 1
					]]>
			</Sentence>
        </Query>  
    </Queries>
</JdbcEntitySetup>